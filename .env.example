# Database
POSTGRES_DB=mealplanner
POSTGRES_USER=mealplanner
POSTGRES_PASSWORD=changeme

# Apple Calendar (CalDAV)
# Generate an app-specific password at https://appleid.apple.com/account/manage
APPLE_CALENDAR_EMAIL=your-apple-id@icloud.com
APPLE_CALENDAR_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx
# Optional: specify calendar name (leave empty to use first calendar)
APPLE_CALENDAR_NAME=

# OIDC (Authentik)
OIDC_ISSUER=https://auth.yourdomain.com/application/o/meal-planner/
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_REDIRECT_URI=http://localhost:8000/api/auth/callback

# App
SECRET_KEY=generate-a-secure-random-key-here
FRONTEND_URL=http://localhost:8000
APP_PORT=8000
SECURE_COOKIES=true  # Set to true for HTTPS in production
DEBUG_TIMING=false   # Set to true to enable CalDAV timing logs
